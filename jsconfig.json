{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "preserve",
        "strictFunctionTypes": true,
        "baseUrl": "src",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@helpers/*": [
                "src/helpers/*"
            ],
            "@localization/*": [
                "src/localization/*"
            ],
            "@fakedata/*": [
                "src/fakedata/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "**/node_modules/*"
    ]
}